<header>
Welcome to D-Secret...
</header>

<div class="enter">
  <form id="post_secret" action="/new" method="POST" >
    <textarea name="content" rows="4" cols="100" placeholder="Enter Your Secret Here!"></textarea>
    <button id="submit_secret" style="button" type="submit">Submit</button>
  </form>
</div>


<div class="container">
<div class="left">


  <% @secrets.each do |secret| %>
  <% @secret = secret %>
  <%= erb :_secret %>
  <% end %>
</div>

  <div class="right">
    <form id="post_comment" action="/new_comment" method="POST" >
      <textarea name="comment" rows="4" cols="39" placeholder="Comment Here!"></textarea>
      <button id="submit_comment" style="button" type="submit">Submit</button>
    </form>

    <div class="righty">
    </div>
  </div>
</div>
